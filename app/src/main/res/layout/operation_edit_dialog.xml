<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/operation_edit_type_spinner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type" />

    <Spinner
        android:id="@+id/operation_edit_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/operation_edit_type_spinner_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/operation_edit_category_spinner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/operation_edit_type_spinner"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/operation_edit_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/operation_edit_category_spinner_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/operation_edit_account_spinner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/operation_edit_category_spinner"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/operation_edit_account_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/operation_edit_account_spinner_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/operation_edit_value_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Value"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/operation_edit_account_spinner"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/operation_edit_value_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/operation_edit_value_title">

        <Spinner
            android:id="@+id/operation_edit_currency_spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/operation_get_value"
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:inputType="number"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/operation_edit_currency_spinner" />

    </RelativeLayout>

    <TextView
        android:id="@+id/operation_edit_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/operation_edit_value_edit"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/operation_get_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/operation_description_hint"
        android:layout_below="@+id/operation_edit_description_title"
        android:layout_marginTop="10dp"
        android:maxLength="20"
        android:maxLines="1"  />

</RelativeLayout>